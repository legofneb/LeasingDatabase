<div class="row">
  <div class="jumbotron" style="padding-bottom: 60px;">
    <h1 class="text-center"><i class="fa fa-circle-o-notch fa-spin"></i> Waiting for input...</h1>
    <p class="text-center">Scan the Order Number to start the scanning process. Alternatively, you can manually enter the SR Number below.</p>
    <hr style="border-top-color: gray" />
    <div class="col-lg-8 col-lg-offset-3">
      <div class="col-lg-8">
        <input type="text" class="form-control col-lg-9" autofocus ng-enter="getOrder()" ng-model="nav.orderNumber" id="home" />
      </div>
      <div class="col-lg-4">
        <button class="btn btn-primary btn-wide col-lg-3" type="button" ng-click="getOrder()">Go!</button>
      </div>
    </div>
  </div>
</div>

<div class="row" ng-show="errors">
  <div class="col-lg-12">
    <div class="alert alert-warning">
      <strong>Warning: </strong>There was a problem with the value entered.
    </div>
  </div>
</div>

<div class="row">
  <div class="well col-xs-6 col-xs-offset-3">
    <h4>Quick view</h4>
    <table class="table table-striped table-hover fading" ng-if="!gettingOrders()">
      <thead>
        <tr>
          <th>SR Number</th>
          <th># of Systems</th>
          <th>Configuration</th>
        </tr>
      </thead>
      <tbody>
        <tr style="cursor: pointer;" ng-repeat="order in newOrders" ng-click="getOrderFromQuickView(order.SR)">
          <td>{{order.SR}}</td>
          <td>{{order.SystemGroups.length}}</td>
          <td>{{order.Summary}}</td>
        </tr>
      </tbody>
    </table>
    <h4 class="text-center fading" ng-if="gettingOrders()"><i class="fa fa-spinner fa-spin"></i> Loading...</h4>
  </div>
</div>