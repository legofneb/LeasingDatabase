@{
  Layout = "~/Views/Shared/_NGLayout.cshtml";
}

<!DOCTYPE html>
<html ng-app="vendorEmails">
<head>
  <title>Vendor Email</title>

  @Html.Partial("~/Views/Shared/_NGStyles.cshtml")
  @Html.Partial("~/Views/Shared/_NGScripts.cshtml")
  <script type="text/javascript">
    angular.module("vendorEmails", []).constant('rootUrl', "@Url.Content("~/")");
  </script>

</head>
<body>

  @Html.Partial("~/Views/Shared/_NGMenu.cshtml")

  <div class="container-fluid" ng-controller="vendorEmailsController as vm">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <h3 class="text-center"><i class="fa fa-mail-forward fa-2x"></i></h3>
              <h3 class="text-center">Vendor Emails</h3>
            </div>
            <hr />
            <div class="row">
              <table class="table">
                <thead>
                  <tr>
                    <th>Email</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <tr ng-repeat="vendor in vm.vendors">
                    <td>{{vendor.email}}</td>
                    <td><button type="button" class="btn btn-danger" ng-click="vm.delete(vendor)"><i class="fa fa-times"></i></button></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <br />
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <div class="input-group">
                  <input type="text" class="form-control" ng-model="vm.email" />
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="vm.add()">Add Email</button>
                  </span>
                </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row" ng-show="vm.errors">
      <div class="col-sm-6 col-sm-offset=3">
        <div class="panel panel-default">
          <div class="panel-body">
            <p ng-repeat="error in errors">{{error}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="~/Scripts/NG/vendorEmails/vendorEmails.js"></script>
</body>

</html>