@{
  Layout = "~/Views/Shared/_NGLayout.cshtml";
}

<!DOCTYPE html>
<html ng-app="parseIGF">
<head>
  <title>Upload IGF EOL Report</title>

  @Html.Partial("~/Views/Shared/_NGStyles.cshtml")
  @Html.Partial("~/Views/Shared/_NGScripts.cshtml")
  <script type="text/javascript">
    angular.module("parseIGF", []).constant('rootUrl', "@Url.Content("~/")");
  </script>

</head>
<body>

  @Html.Partial("~/Views/Shared/_NGMenu.cshtml")

  <div class="container-fluid" ng-controller="parseIGFController" ng-show="!vm.errors">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <h3 class="text-center"><i class="fa fa-cloud-upload fa-2x"></i></h3>
              <h3 class="text-center">Upload IGF EOL Report</h3>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-8 col-sm-offset-3">
                <p class="lead">Upload the EOL Report from IGF to synchronize the EOL leasing data with their report.</p>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <form>
                  <input type="file" class="form-control" name="file" onchange="angular.element(this).scope().setFile(this.files[0])"/>
                </form>
              </div>
            </div>
            <br />
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <button ng-if="!submitting" type="button" class="btn btn-primary btn-block btn-hg" ng-click="uploadFile()">Upload</button>
                <button ng-if="submitting" type="button" class="btn btn-primary btn-block btn-hg">Upload <i class="fa fa-spinner fa-spin"></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row" ng-show="errors">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <p ng-repeat="error in errors">{{error}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="~/Scripts/NG/parseIGF/parseIGF.js"></script>
</body>

</html>