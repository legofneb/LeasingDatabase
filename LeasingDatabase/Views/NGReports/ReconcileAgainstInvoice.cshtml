@{
  Layout = "~/Views/Shared/_NGLayout.cshtml";
}

  <!DOCTYPE html>
  <html>
  <head>
    <title>Lease Computer Report</title>

    @Html.Partial("~/Views/Shared/_NGStyles.cshtml")
    @Html.Partial("~/Views/Shared/_NGScripts.cshtml")
  </head>
  <body>

    @Html.Partial("~/Views/Shared/_NGMenu.cshtml")

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <h3 class="text-center"><i class="fa fa-file-excel-o fa-2x"></i></h3>
                <h3 class="text-center">Reconcile against IBM Invoices</h3>
              </div>
              <hr />
              <div class="row">
                <div class="col-sm-8 col-sm-offset-3">
                  <p class="lead">Upload IBM Invoice</p>
                </div>
              </div>
              <form action="@Url.Content("~/")api/ReconcileAgainstInvoice" method="post" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-sm-8 col-sm-offset-3">
                    <input class="form-control" type="file" name="file" />
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-8 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-block btn-hg">Compare</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>

</html>