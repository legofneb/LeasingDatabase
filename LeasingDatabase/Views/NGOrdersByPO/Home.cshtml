<h3>
  Order Details
  <small><i class="fa fa-pencil orangeHover" id="edit" data-toggle="tooltip" data-placement="right" title="Edit" ng-click="vm.editOrder()"></i></small>
  <i class="fa fa-trash-o fa-3x trashIcon redHover text-asbestos" id="delete" data-toggle="tooltip" data-placement="bottom" title="Cancel" ng-click="vm.cancelOrder()" ng-show="vm.editingOrder"></i>
  <i class="fa fa-save fa-3x saveIcon orangeHover text-asbestos" id="save" data-toggle="tooltip" data-placement="bottom" title="Save" ng-click="vm.saveOrder()" ng-show="vm.editingOrder"></i>
</h3>
<hr />


<div class="col-sm-12">
  <h4>Component Overview <small><a style="cursor: pointer;" class="text-concrete" ng-if="vm.editingOrder" ng-click="vm.AddComponent()"><i class="fa fa-plus-square-o"></i> Add Component</a></small></h4>
  <hr />

  <div class="col-sm-3" ng-repeat="component in vm.selectedOrder.Configuration">
    <div ng-if="component.Type.length > 0">
      <div class="row">
        <div class="col-md-9 col-md-offset-3" ng-if="!vm.editingOrder">
          <type-icon component="component.Type" class="fa-4x"></type-icon>
        </div>
        <div class="col-md-9 col-md-offset-3 text-center" ng-if="vm.editingOrder">
          <type-icon component="component.Type" class="fa-4x"></type-icon>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p class="text-silver">Type</p>
        </div>
        <div class="col-md-9">
          <p ng-if="!vm.editingOrder">{{ component.Type }}</p>
          <au-select ng-if="vm.editingOrder" id="Type{{$index}}" ng-list="vm.types" ng-model="component.Type"></au-select>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p class="text-silver">Make</p>
        </div>
        <div class="col-md-9">
          <p ng-if="!vm.editingOrder">{{ component.Make }}</p>
          <au-select ng-if="vm.editingOrder" id="Make{{$index}}" ng-enter="vm.addValueToMake('Make{{$index}}')" ng-list="vm.makes" ng-model="component.Make"></au-select>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p class="text-silver">Model</p>
        </div>
        <div class="col-md-9">
          <p ng-if="!vm.editingOrder">{{ component.Model }}</p>
          <au-select ng-if="vm.editingOrder" id="Model{{$index}}" ng-enter="vm.addValueToModel('Model{{$index}}')" ng-list="vm.models" ng-model="component.Model"></au-select>
        </div>
      </div>
    </div>

    <div ng-if="component.Type == null">
      <p class="lead">No Configuration</p>
    </div>
  </div>

</div>

<div class="col-lg-12">
  <hr />
  <h3>Systems</h3>

  <table class="table table-striped table-bordered table-hover" ng-class="{'table-condensed': vm.editingOrder}">
    <thead>
      <tr>
        <th>Statement Name</th>
        <th>GID</th>
        <th>Department Name</th>
        <th>FOP</th>
        <th>Rate Level</th>
        <th>Term</th>
        <th>I.H.</th>
        <th>I.S.</th>
        <th>Renewal</th>
      </tr>
    </thead>
    <tbody>
      <tr style="cursor: pointer;" ng-repeat="system in vm.selectedOrder.SystemGroups" ng-class="{info: $index == selectedRow}" ng-click="vm.setSelectedSystem(system)">

        <td ng-if="!editingOrder">{{ system.StatementName}}</td>
        <td ng-if="editingOrder"><input class="form-control" type="text" ng-model="system.StatementName" /></td>

        <td ng-if="!editingOrder">{{system.User.GID}}</td>
        <td style="width: 10%;" ng-if="editingOrder"><div class="input-group"><input class="form-control" type="text" ng-model="system.User.GID" /><span class="input-group-btn"><button class="btn btn-default" ng-click="vm.NewUserForsystem(system)"><i class="fa fa-unlink"></i></button></span></div></td>

        <td ng-if="!editingOrder">{{system.Department.DepartmentName}}</td>
        <td ng-if="editingOrder"><input class="form-control" type="text" ng-model="system.Department.DepartmentName" /></td>

        <td ng-if="!editingOrder">{{system.Department.FOP}}</td>
        <td style="width: 16%;" ng-if="editingOrder"><div class="input-group"><input class="form-control" type="text" ng-model="system.Department.FOP" /><span class="input-group-btn"><button class="btn btn-default" ng-click="vm.NewFOPForsystem(system)"><i class="fa fa-unlink"></i></button></span></div></td>

        <td>{{system.RateLevel}}</td>
        <td>{{system.Term}}</td>
        <td ng-if="system.InstallHardware"><span class="glyphicon glyphicon-ok"></span></td>
        <td ng-if="!system.InstallHardware"><span class="glyphicon glyphicon-remove"></span></td>

        <td ng-if="system.InstallSoftware"><span class="glyphicon glyphicon-ok"></span></td>
        <td ng-if="!system.InstallSoftware"><span class="glyphicon glyphicon-remove"></span></td>

        <td ng-if="system.Renewal"><span class="glyphicon glyphicon-ok"></span></td>
        <td ng-if="!system.Renewal"><span class="glyphicon glyphicon-remove"></span></td>
      </tr>
    </tbody>
  </table>
</div>