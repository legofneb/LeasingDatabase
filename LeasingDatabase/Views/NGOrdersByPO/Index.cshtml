@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NGLayout.cshtml";
}
<!DOCTYPE html>
<html ng-app="SROrders">
<head>
  <title>New Orders</title>

  @Html.Partial("~/Views/Shared/_NGStyles.cshtml")
  @Html.Partial("~/Views/Shared/_NGScripts.cshtml")
  <script type="text/javascript">
    angular.module("SROrders", ["bfApp", "ngRoute"]).constant('rootUrl', "@Url.Content("~/")");
  </script>
  
</head>
<body>

  @Html.Partial("~/Views/Shared/_NGMenu.cshtml")

  <div class="container-fluid" ng-controller="SRController as vm">
    <div class="row">
      <div class="col-xs-12 col-sm-3 sidebar">
        <div class="list-group" style="margin:0 -1.5em;">
          <div ng-repeat="order in vm.orders">
            <a href="" class="list-group-item" ng-click="vm.setSelectedOrder(order, $index)" ng-class="{active: $index == vm.selected}">
              <h4 class="list-group-item-heading">
                {{ order.SR }}
                <span ng-class="{'hidden': vm.cart.indexOf(order) == -1}"><i class="fa fa-check"></i></span>
                <small>
                  <span ng-repeat="component in order.Configuration">
                    <i ng-if="component.Type == 'Laptop'" class="fa fa-laptop"></i>
                    <i ng-if="component.Type == 'CPU'" class="fa fa-hdd-o"></i>
                    <i ng-if="component.Type == 'Monitor'" class="fa fa-desktop"></i>
                  </span>
                </small>
              </h4>
              <p class="list-group-item-text">
                {{ order.Summary }}
              </p>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-9 col-sm-offset-3 main" ng-show="vm.selectedOrder">
        <h3>
          Order Details
          <small><i class="fa fa-pencil orangeHover" id="edit" data-toggle="tooltip" data-placement="right" title="Edit" ng-click="vm.editOrder()"></i></small>
          <i class="fa fa-trash-o fa-3x trashIcon redHover text-asbestos" id="delete" data-toggle="tooltip" data-placement="bottom" title="Cancel" ng-click="vm.cancelOrder()" ng-show="vm.editingOrder"></i>
          <i class="fa fa-save fa-3x saveIcon orangeHover text-asbestos" id="save" data-toggle="tooltip" data-placement="bottom" title="Save" ng-click="vm.saveOrder()" ng-show="vm.editingOrder"></i>
        </h3>
        <hr />
        <div class="col-sm-12">
          <h4>Component(s)</h4>
          <hr />

          <div class="col-sm-3" ng-repeat="component in vm.selectedOrder.Configuration">
            <div ng-if="component.Type.length > 0">
              <div class="row">
                <div class="col-md-9 col-md-offset-3" ng-if="!vm.editingOrder">
                  <type-icon component="component.Type" class="fa-4x"></type-icon>
                </div>
                <div class="col-md-9 col-md-offset-3 text-center" ng-if="vm.editingOrder">
                  <type-icon component="component.Type" class="fa-4x"></type-icon>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3">
                  <p class="text-silver">Type</p>
                </div>
                <div class="col-md-9">
                  <p ng-if="!vm.editingOrder">{{ component.Type }}</p>
                  <au-select ng-if="vm.editingOrder" id="Type{{$index}}" ng-list="vm.types" ng-model="component.Type"></au-select>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3">
                  <p class="text-silver">Make</p>
                </div>
                <div class="col-md-9">
                  <p ng-if="!vm.editingOrder">{{ component.Make }}</p>
                  <au-select ng-if="vm.editingOrder" id="Make{{$index}}" ng-enter="vm.addValueToMake('Make{{$index}}')" ng-list="vm.makes" ng-model="component.Make"></au-select>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3">
                  <p class="text-silver">Model</p>
                </div>
                <div class="col-md-9">
                  <p ng-if="!vm.editingOrder">{{ component.Model }}</p>
                  <au-select ng-if="vm.editingOrder" id="Model{{$index}}" ng-enter="vm.addValueToModel('Model{{$index}}')" ng-list="vm.models" ng-model="component.Model"></au-select>
                </div>
              </div>
            </div>

            <div ng-if="component.Type == null">
              <p class="lead">No Configuration</p>
            </div>
          </div>

          <div class="col-lg-3" ng-if="vm.editingOrder && vm.selectedOrder.Configuration.length < 3">
            <div class="panel panel-default panel-primary">
              <div class="panel-heading">Add Component</div>
              <div class="panel-body">
                <button type="button" class="btn btn-default" ng-click="vm.AddComponent()">
                  <i class="fa fa-plus-square-o"></i> Add Component
                </button>
              </div>
            </div>
          </div>

        </div>




        <div class="col-lg-12">
          <hr />
          <h3>Systems</h3>

          <table class="table table-striped table-bordered table-hover" ng-class="{'table-condensed': vm.editingOrder}">
            <thead>
              <tr>
                <th>Statement Name</th>
                <th>GID</th>
                <th>Room</th>
                <th>Building</th>
                <th>Phone</th>
                <th>Note</th>
                <th>Department Name</th>
                <th>FOP</th>
                <th>Rate Level</th>
                <th>Term</th>
                <th>I.H.</th>
                <th>I.S.</th>
                <th>Renewal</th>
              </tr>
            </thead>
            <tbody>
              <tr style="cursor: pointer;" ng-repeat="component in vm.selectedOrder.SystemGroups" ng-class="{info: $index == selectedRow}" ng-click="vm.setSelectedSystem(component, $index)">

                <td ng-if="!editingOrder">{{ component.StatementName}}</td>
                <td ng-if="editingOrder"><input class="form-control" type="text" ng-model="component.StatementName" /></td>

                <td ng-if="!editingOrder">{{component.User.GID}}</td>
                <td style="width: 10%;" ng-if="editingOrder"><div class="input-group"><input class="form-control" type="text" ng-model="component.User.GID" /><span class="input-group-btn"><button class="btn btn-default" ng-click="vm.NewUserForComponent(component)"><i class="fa fa-unlink"></i></button></span></div></td>

                <td ng-if="!editingOrder">{{component.Room}}</td>
                <td style="width: 5%;" ng-if="editingOrder"><input class="form-control" type="text" ng-model="component.Room" /></td>

                <td ng-if="!editingOrder">{{component.Building}}</td>
                <td ng-if="editingOrder"><input class="form-control" type="text" ng-model="component.Building" /></td>

                <td ng-if="!editingOrder">{{component.User.Phone}}</td>
                <td ng-if="editingOrder"><input class="form-control" type="text" ng-model="component.User.Phone" /></td>

                <td ng-if="!editingOrder">{{component.Notes}}</td>
                <td ng-if="editingOrder"><input class="form-control" type="text" ng-model="component.Notes" /></td>

                <td ng-if="!editingOrder">{{component.Department.DepartmentName}}</td>
                <td ng-if="editingOrder"><input class="form-control" type="text" ng-model="component.Department.DepartmentName" /></td>

                <td ng-if="!editingOrder">{{component.Department.FOP}}</td>
                <td style="width: 16%;" ng-if="editingOrder"><div class="input-group"><input class="form-control" type="text" ng-model="component.Department.FOP" /><span class="input-group-btn"><button class="btn btn-default" ng-click="vm.NewFOPForComponent(component)"><i class="fa fa-unlink"></i></button></span></div></td>

                <td>{{component.RateLevel}}</td>
                <td>{{component.Term}}</td>
                <td ng-if="component.InstallHardware"><span class="glyphicon glyphicon-ok"></span></td>
                <td ng-if="!component.InstallHardware"><span class="glyphicon glyphicon-remove"></span></td>

                <td ng-if="component.InstallSoftware"><span class="glyphicon glyphicon-ok"></span></td>
                <td ng-if="!component.InstallSoftware"><span class="glyphicon glyphicon-remove"></span></td>

                <td ng-if="component.Renewal"><span class="glyphicon glyphicon-ok"></span></td>
                <td ng-if="!component.Renewal"><span class="glyphicon glyphicon-remove"></span></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="col-lg-12" ng-show="selectedSystem">
          <hr />
          <h3>System Details for {{selectedSystem.StatementName}}</h3>


          <div class="col-lg-4" ng-repeat="comp in selectedSystem.Components">
            <div class="panel panel-default panel-primary">
              <div class="panel-heading">
                {{comp.Type}}
              </div>
              <div class="panel-body">
                <table class="table">
                  <tbody>
                    <tr>
                      <td style="width:50%;">Serial Number</td>
                      <td style="width:50%;">{{comp.SerialNumber}}</td>
                    </tr>
                    <tr>
                      <td>Lease Tag</td>
                      <td>{{comp.LeaseTag}}</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="col-lg-12">
            <hr />
          </div>

          <div class="col-lg-4" ng-repeat="EOLComp in selectedSystem.EOLComponents">
            <div class="panel panel-default">
              <div class="panel-heading">
                EOL {{EOLComp.Type}}
              </div>
              <div class="panel-body">
                <table class="table">
                  <tbody>
                    <tr>
                      <td style="width:50%;">Serial Number</td>
                      <td style="width:50%;">{{EOLComp.SerialNumber}}</td>
                    </tr>
                    <tr>
                      <td>Lease Tag</td>
                      <td>{{EOLComp.LeaseTag}}</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="col-lg-4" ng-if="editingOrder && selectedSystem.EOLComponents.length < 3">
            <div class="panel panel-default">
              <div class="panel-heading">Add EOL Component</div>
              <div class="panel-body">
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Enter Serial Number or Lease Tag" ng-model="addEOLSystem.text" ng-enter="FindEOLSystem()" />
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="vm.FindEOLSystem()"><i class="fa fa-plus-square-o"></i> Add System</button>
                  </span>
                </div>
                <hr />
                <button type="button" class="btn btn-default" ng-click="vm.AddEOL()">
                  <i class="fa fa-plus-square-o"></i> Add Single EOL Component
                </button>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>

  <script src="~/Scripts/NG/ordersByPO/ordersController.js"></script>
  <script type="text/javascript">
    $(function () {
      $("#edit").tooltip();
      $("#save").tooltip();
      $("#delete").tooltip();
    });
  </script>
</body>

</html>