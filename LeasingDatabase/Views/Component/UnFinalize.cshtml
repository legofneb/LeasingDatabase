@{
    ViewBag.Title = "UnFinalize";
}


@section extras{
	<link href="~/Content/Dashboard/bootstrap-button.css" rel="stylesheet" />
}

<div class="container">
    <div class="well span3">
@using (Html.BeginForm("UnFinalizePage", "Component", FormMethod.Get, new { @class = "form-horizontal", onsubmit="return confirm('Are you sure you want to unfinalize? This process is irreversible and affects the system group (not just the single component)');" }))
{
    <div class="control-group">
		<label for="SR">SR Number</label>
		<div class="controls">
			<input type="text" name="SR" />
		</div>
	</div>
	<button class="btn" type="submit">UnFinalize Component</button>
}
    </div>
</div>