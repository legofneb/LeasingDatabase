<div class="col-md-12">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-3">
        <p class="text-silver">Order Date</p>
      </div>
      <div class="col-md-6">
        <p>{{ vm.selectedOrder.Date}}</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <p class="text-silver">Orderer GID</p>
      </div>
      <div class="col-md-6">
        <p><edit-input editing="vm.editingOrder" ng-model="vm.selectedOrder.OrdererGID"></edit-input></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <p class="text-silver">Order Notes</p>
      </div>
      <div class="col-md-6">
        <p><edit-textarea editing="vm.editingOrder" ng-model="vm.selectedOrder.Notes" rows="5"></edit-textarea></p>
      </div>
    </div>
  </div>

</div>

<div class="col-md-12">
  <h4>Component(s) <small><a style="cursor: pointer;" class="text-concrete" ng-if="vm.editingOrder" ng-click="vm.addNewComponent(vm.selectedOrder)"><i class="fa fa-plus-square-o"></i> Add Component</a></small></h4>
  <hr />

  <div class="col-md-3" ng-repeat="component in vm.selectedOrder.Configuration">
    <div ng-if="component.Type.length > 0">
      <div class="row">
        <div class="col-md-9 col-md-offset-3" ng-if="!vm.editingOrder">
          <type-icon component="component.Type" class="fa-4x"></type-icon>
        </div>
        <div class="col-md-9 col-md-offset-3 text-center" ng-if="vm.editingOrder">
          <type-icon component="component.Type" class="fa-4x"></type-icon>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p class="text-silver">Type</p>
        </div>
        <div class="col-md-9">
          <p ng-if="!vm.editingOrder">{{ component.Type }}</p>
          <au-select ng-if="vm.editingOrder" id="Type{{$index}}" ng-list="vm.types" ng-model="component.Type"></au-select>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p class="text-silver">Make</p>
        </div>
        <div class="col-md-9">
          <p ng-if="!vm.editingOrder">{{ component.Make }}</p>
          <au-select ng-if="vm.editingOrder" id="Make{{$index}}" ng-enter="vm.addValueToMake('Make{{$index}}')" ng-list="vm.makes" ng-model="component.Make"></au-select>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p class="text-silver">Model</p>
        </div>
        <div class="col-md-9">
          <p ng-if="!vm.editingOrder">{{ component.Model }}</p>
          <au-select ng-if="vm.editingOrder" id="Model{{$index}}" ng-enter="vm.addValueToModel('Model{{$index}}')" ng-list="vm.models" ng-model="component.Model"></au-select>
        </div>
      </div>
      <div class="row" ng-if="vm.editingOrder">
        <div class="col-md-offset-3 col-md-9">
          <button type="button" class="btn btn-link" ng-click="vm.removeComponent(component)">Remove Component</button>
        </div>
      </div>
    </div>

    <div ng-if="component.Type == null">
      <p class="lead">No Configuration</p>
    </div>
  </div>

  <div class="col-md-3" ng-if="vm.selectedOrder.Configuration.length < 1">
    <p class="lead">No Configuration</p>
  </div>

</div>

<div class="col-lg-12" ng-if="vm.editingOrder">
  <hr />
  <h4>Order Actions</h4>
  <div class="row">
    <div class="col-md-2">
      <p class="text-silver">Set FOP For Order</p>
    </div>
    <div class="col-md-2">
      <input type="text" class="form-control" ng-keyup="vm.setFOP()" ng-paste="vm.setFOP()" ng-model="vm.globalFOP" />
    </div>
    <div class="col-md-2 col-md-offset-2">
      <p class="text-silver">Set Rate Level</p>
    </div>
    <div class="col-md-2">
      <button type="button" class="btn btn-info" ng-click="vm.setRateLevel('Base')">Base</button>
      <button type="button" class="btn btn-info" ng-click="vm.setRateLevel('Support')">Support</button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p class="text-silver">Copy Order Notes</p>
    </div>
    <div class="col-md-2">
      <button type="button" class="btn btn-default btn-primary" ng-click="vm.setNotes()" ng-paste="vm.setNotes()">Set Notes</button>
    </div>
  </div>
</div>

  <h3>Systems <small><a style="cursor: pointer;" class="text-concrete" ng-if="vm.editingOrder" ng-click="vm.addNewSystem(vm.selectedOrder)"><i class="fa fa-plus-square-o"></i> Add System</a></small></h3>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Statement Name</th>
        <th>GID</th>
        <th>Department Name</th>
        <th>FOP</th>
        <th>Rate Level</th>
        <th>Term</th>
        <th>Install Hardware</th>
        <th>Install Software</th>
        <th>Renewal</th>
      </tr>
    </thead>
    <tbody>
      <tr style="cursor: pointer;" ng-repeat="component in vm.selectedOrder.Components" ng-click="vm.componentDetails(component)">
        <td>{{ component.StatementName }}</td>
        <td>{{ component.GID }}</td>
        <td>{{ component.DepartmentName }}</td>
        <td>{{ component.FOP }}</td>
        <td>{{ component.RateLevel }}</td>
        <td>{{ component.Term }}</td>
        <td ng-if="component.InstallHardware"><span class="glyphicon glyphicon-ok"></span></td>
        <td ng-if="!component.InstallHardware"><span class="glyphicon glyphicon-remove"></span></td>

        <td ng-if="component.InstallSoftware"><span class="glyphicon glyphicon-ok"></span></td>
        <td ng-if="!component.InstallSoftware"><span class="glyphicon glyphicon-remove"></span></td>

        <td ng-if="component.Renewal"><span class="glyphicon glyphicon-ok"></span></td>
        <td ng-if="!component.Renewal"><span class="glyphicon glyphicon-remove"></span></td>
      </tr>
    </tbody>
  </table>