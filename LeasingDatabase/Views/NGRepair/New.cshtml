<div class="row">
  

  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 main well">
    <h3>Submit Repair</h3>
    <form class="form-horizontal">
      <div class="form-group">
        <label for="SerialNumber" class="col-sm-2 control-label">Serial Number</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Serial Number" ng-model="vm.newRepair.SerialNumber"/>
        </div>
      </div>

      <div class="form-group">
        <label for="Assignee" class="col-sm-2 control-label">Assignee</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Assignee" ng-model="vm.newRepair.Assignee"/>
        </div>
      </div>

      <div class="form-group">
        <label for="Note" class="col-sm-2 control-label">Note</label>
        <div class="col-sm-10">
          <textarea class="form-control" ng-model="vm.newRepair.Note"></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="button" class="btn btn-primary" ng-click="vm.submitNewRepair()">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>