@{
  Layout = "~/Views/Shared/_NGLayout.cshtml";
}

<!DOCTYPE html>
<html ng-app="departments">
<head>
  <title>Departments</title>

  @Html.Partial("~/Views/Shared/_NGStyles.cshtml")
  @Html.Partial("~/Views/Shared/_NGScripts.cshtml")
  <script type="text/javascript">
    angular.module("departments", ["bfApp", "ngRoute"]).constant('rootUrl', "@Url.Content("~/")");
  </script>

</head>
<body>

  @Html.Partial("~/Views/Shared/_NGMenu.cshtml")

  <div class="container-fluid" ng-controller="departmentsController as vm">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <h3 class="text-center"><i class="fa fa-building fa-2x"></i></h3>
              <h3 class="text-center">Departments</h3>
            </div>
            <hr />

            <div class="row">
              <div class="col-sm-8 col-sm-offset-2">
                <input type="text" class="form-control" ng-model="vm.searchTerm" />
              </div>
            </div>
            <br />

            <table class="table">
              <thead>
                <tr>
                  <th>Department Name</th>
                  <th>FOP</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="dept in vm.Departments | filter:vm.searchTerm">
                  <td><edit-input editing="vm.editingDept(dept)" ng-model="dept.DepartmentName"></edit-input></td>
                  <td>{{dept.FOP}}</td>
                  <td>
                    <button type="button" class="btn btn-link" ng-if="!vm.editingDept(dept)" ng-click="vm.editDept(dept)">Edit</button>
                    <button type="button" class="btn btn-link" ng-if="vm.editingDept(dept)" ng-click="vm.saveDept(dept)">Save</button>
                    <button type="button" class="btn btn-link" ng-if="vm.editingDept(dept)" ng-click="vm.cancelDept(dept)">Cancel</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="~/Scripts/NG/departments/departmentsController.js"></script>>
</body>

</html>