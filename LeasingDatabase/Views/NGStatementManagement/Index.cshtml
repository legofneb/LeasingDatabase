@{
  Layout = "~/Views/Shared/_NGLayout.cshtml";
}

<!DOCTYPE html>
<html ng-app="statementManagement">
<head>
  <title>StatementManagement</title>

  @Html.Partial("~/Views/Shared/_NGStyles.cshtml")
  @Html.Partial("~/Views/Shared/_NGScripts.cshtml")
  <script type="text/javascript">
    angular.module("statementManagement", ["bfApp", "ngRoute"]).constant('rootUrl', "@Url.Content("~/")");
  </script>

</head>
<body>

  @Html.Partial("~/Views/Shared/_NGMenu.cshtml")

  <div class="container-fluid" ng-controller="statementManagementController as vm">
    <div class="row" ng-if="!vm.errors">
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <h3 class="text-center"><i class="fa fa-envelope-o fa-2x"></i></h3>
              <h3 class="text-center">Billing Statements</h3>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-8 col-sm-offset-3">
                <p class="lead">Send out Billing Statements and unlock statements until the given month.</p>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-4">
                <p class="text-asbestos text-center">Statements are currently shown until:</p>
              </div>
              <div class="col-sm-8">
                <p class="text-asbestos">{{vm.LastBillingStatementDate | date:'MMMM y'}}</p>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-4">
                <p class="text-asbestos text-center">Unlock statements until:</p>
              </div>

              <div class="col-sm-8">
                <div class="input-group">
                  <span class="input-group-btn"><button type="button" class="btn" ng-click="vm.decrementBillingStatementDate()"><i class="fa fa-minus"></i></button></span>
                  <span class="form-control text-center">
                    {{vm.BillingStatementDate | date:'MMMM y'}}
                  </span>
                  <span class="input-group-btn"><button type="button" class="btn" ng-click="vm.incrementBillingStatementDate()"><i class="fa fa-plus"></i></button></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-8 col-sm-offset-4">
                <button type="button" class="btn btn-primary btn-block btn-hg" ng-click="vm.sendStatements()">Send New Statements</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <h3 class="text-center"><i class="fa fa-envelope fa-2x"></i></h3>
              <h3 class="text-center">EOL Statements</h3>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-8 col-sm-offset-3">
                <p class="lead">Send out EOL Statements and unlock statements until the given month.</p>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-4">
                <p class="text-asbestos text-center">EOL Statements are currently shown until:</p>
              </div>
              <div class="col-sm-8">
                <p class="text-asbestos">Placeholder</p>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-3">
                <p class="text-asbestos text-center">Unlock statements until:</p>
              </div>

              <div class="col-sm-8">
                <div class="input-group">
                  <span class="input-group-btn"><button type="button" class="btn" ng-click="vm.decrementEOLStatementDate()"><i class="fa fa-minus"></i></button></span>
                  <span class="form-control text-center">
                    {{vm.EOLStatementDate | date:'MMMM y'}}
                  </span>
                  <span class="input-group-btn"><button type="button" class="btn" ng-click="vm.incrementEOLStatementDate()"><i class="fa fa-plus"></i></button></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-8 col-sm-offset-3">
                <button type="button" class="btn btn-primary btn-block btn-hg" ng-click="vm.sendEOLStatements()" disabled>Send EOL Statements</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row" ng-if="vm.errors">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="text-center">Success.</h3>
            <hr />
            <p>Reported Errors:</p>
            <ul>
              <li ng-repeat="error in vm.errors">{{error}}</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

        <script src="~/Scripts/NG/statementManagement/statementManagementController.js"></script>
</body>

</html>