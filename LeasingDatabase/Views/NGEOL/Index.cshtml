@{
  Layout = "~/Views/Shared/_NGLayout.cshtml";
}

<!DOCTYPE html>
<html ng-app="EOL">
<head>
  <title>EOL Page</title>

  @Html.Partial("~/Views/Shared/_NGStyles.cshtml")
  @Html.Partial("~/Views/Shared/_NGScripts.cshtml")
  <script type="text/javascript">
    angular.module("EOL", ["bfApp", "ngRoute"]).constant('rootUrl', "@Url.Content("~/")");
  </script>

</head>
<body>

  @Html.Partial("~/Views/Shared/_NGMenu.cshtml")

  <div class="container-fluid" ng-controller="EOLController as vm">
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <h3 class="text-center"><i class="fa fa-truck fa-2x"></i></h3>
              <h3 class="text-center">EOL</h3>
            </div>

            <div class="row">
              <div class="col-sm-2 col-sm-offset-2">
                <p class="text-asbestos text-center">EOL Date:</p>
              </div>

              <div class="col-sm-4">
                <div class="input-group">
                  <span class="input-group-btn"><button type="button" class="btn" ng-click="vm.decrementEOLDate()"><i class="fa fa-minus"></i></button></span>
                  <span class="form-control text-center">
                    {{vm.EOLDate | date:'MMMM y'}}
                  </span>
                  <span class="input-group-btn"><button type="button" class="btn" ng-click="vm.incrementEOLDate()"><i class="fa fa-plus"></i></button></span>
                </div>
              </div>

              <div class="col-sm-2">
                <button type="button" class="btn btn-primary" ng-click="vm.downloadExcel()">Download Excel</button>
              </div>
            </div>
            <hr />

            <div class="row">
              <div class="col-sm-2 col-sm-offset-2">
                <p class="text-asbestos text-center">Search:</p>
              </div>

              <div class="col-sm-4">
                <input type="text" class="form-control" ng-model="vm.searchTerm" />
              </div>
            </div>
            <br />

            <div class="col-sm-12">
              <div class="table-responsive" style="overflow-x:auto;">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Serial Number</th>
                      <th>Lease Tag</th>
                      <th>Type</th>
                      <th>Make</th>
                      <th>Model</th>
                      <th>Statement Name</th>
                      <th>Department Name</th>
                      <th>End Billing Date</th>
                      <th>Return Date</th>
                      <th>Inbounded</th>
                      <th>Damages</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr ng-repeat="model in vm.models | filter:vm.searchTerm">
                      <td>{{model.SerialNumber}}</td>
                      <td>{{model.LeaseTag}}</td>
                      <td>{{model.Type}}</td>
                      <td>{{model.Make}}</td>
                      <td>{{model.Model}}</td>
                      <td>{{model.StatementName}}</td>
                      <td>{{model.DepartmentName}}</td>
                      <td>{{model.EndBillingDate | date:'longDate'}}</td>
                      <td>{{model.ReturnDate | date:'longDate'}}</td>
                      <td>
                        <span ng-show="!vm.editingModel(model)">
                          <span ng-if="model.Decommissioned" class="glyphicon glyphicon-ok">
                          </span>
                        </span>
                        <span ng-show="vm.editingModel(model)"><input type="checkbox" ng-model="model.Decommissioned" /></span>
                      </td>
                      <td><edit-input editing="vm.editingModel(model)" ng-model="model.Damages"></edit-input></td>
                      <td>
                        <button type="button" class="btn btn-link" ng-if="!vm.editingModel(model)" ng-click="vm.editModel(model)">Edit</button>
                        <button type="button" class="btn btn-link" ng-if="vm.editingModel(model)" ng-click="vm.saveModel(model)">Save</button>
                        <button type="button" class="btn btn-link" ng-if="vm.editingModel(model)" ng-click="vm.cancelModel(model)">Cancel</button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="~/Scripts/NG/eol/eolController.js"></script>
</body>

</html>